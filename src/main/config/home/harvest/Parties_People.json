{
    "harvester": {
        "type": "csv",
        "csv": {
            "fileLocation": "${fascinator.home}/data/Parties_People_Sample.csv",
            "idColumn": "ID",
            "recordIDPrefix": "http://fascinator.usq.edu.au/parties/people/",
            "headerRow": true,
            "delimiter": ",",
            "ignoredFields": [],
            "includedFields" : ["ID", "Honorific", "Given Name", "Family Name", "Division", "School", "Email"]
        }
    },

    "transformer": {
        "harvestQueue": ["handle"],
        "indexOnHarvest": "false",
        "renderQueue": ["jsonVelocity"]
    },

    "transformerOverrides": {
        "handle": {
            "source": "metadata.json",
            "description": {
                "seperator": " ",
                "paths": [
                    ["data", "Honorific"],
                    ["data", "Given Name"],
                    ["data", "Family Name"],
                ]
            },
            "output": {
                "path": ["metadata"],
                "field": "dc.identifier"
            },
            "template": "gregtest.[[OID]]"
        },
        "jsonVelocity": {
            "templatesPath" : "${fascinator.home}/templates/people",
            "portalId": "Parties_People"
        }
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "Parties_People.py"
        },
        "params": {
            "repository.name": "People",
            "repository.type": "Parties"
        }
    }
}
